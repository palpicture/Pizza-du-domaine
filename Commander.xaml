<Page x:Class="Pizza_du_domaine.Commander"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Pizza_du_domaine"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Commander" Height="1080" Width="1920">

    <Grid>
        <DataGrid x:Name="Pizzas" HorizontalAlignment="Left" Height="1060" VerticalAlignment="Top" Width="1900" Margin="10,10,0,0">

            <DataGrid.Resources>
                <Style TargetType="{x:Type DataGridColumnHeader}">
                    <Setter Property="FontSize" Value="50"/>
                </Style>
            </DataGrid.Resources>
            
            <DataGrid.Columns>
                <DataGridTextColumn Header=" Pizzas " Width="350"/>
                <DataGridTextColumn Header=" Contenu " Width="850"/>
                <DataGridComboBoxColumn Header=" Petite " Width="250"/>
                <DataGridComboBoxColumn Header=" Moyenne " Width="250"/>
                <DataGridComboBoxColumn Header=" Grande " Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Page>
